<% @posts.each do |post| %>
   <div class="card" style="width: 50%;">
    <div class="card-body">
        <h2 class="card-title"><%= post.title %></h2>
        <p class="card-text"> <%= truncate(post.body, :length => 35) %></p>
        <a href="#" class="card-link"><%= link_to "Read Post", post %></a>
    </div>
    </div>
<% end %>
